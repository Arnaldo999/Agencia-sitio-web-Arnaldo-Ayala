  <!-- === SCRIPTS === -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const header = document.querySelector('.ayala-header-oscuro');
      const hamburger = document.querySelector('.ayala-hamburger');
      const mobileMenu = document.querySelector('.ayala-menu-mobile');
      const mobileLinks = document.querySelectorAll('.ayala-menu-mobile a');

      // Efecto scroll
      window.addEventListener('scroll', function() {
        if (window.scrollY > 30) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
      });

      // Toggle menú móvil
      hamburger.addEventListener('click', function() {
        this.classList.toggle('active');
        mobileMenu.classList.toggle('active');
        document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
      });

      // Cerrar menú al hacer clic en enlace
      mobileLinks.forEach(function(link) {
        link.addEventListener('click', function() {
          hamburger.classList.remove('active');
          mobileMenu.classList.remove('active');
          document.body.style.overflow = '';
        });
      });
    });
  </script>

