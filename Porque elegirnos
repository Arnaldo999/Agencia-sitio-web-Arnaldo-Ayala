  <!-- === SCRIPTS JAVASCRIPT === -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      
      // === ANIMACIÓN DE CONTADOR NUMÉRICO ===
      function animateCounter(element, target, duration) {
        let start = 0;
        const increment = target / (duration / 16);
        const isPercentage = element.textContent.includes('%');
        const hasPlus = element.textContent.includes('+');
        
        function updateCounter() {
          start += increment;
          if (start < target) {
            element.textContent = Math.floor(start) + (isPercentage ? '%' : (hasPlus ? '+' : ''));
            requestAnimationFrame(updateCounter);
          } else {
            element.textContent = target + (isPercentage ? '%' : (hasPlus ? '+' : ''));
          }
        }
        
        updateCounter();
      }

      // Observador para activar contadores cuando entren en viewport
      const statCards = document.querySelectorAll('.stat-numero-ayala');
      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !entry.target.classList.contains('animated')) {
            entry.target.classList.add('animated');
            const text = entry.target.textContent;
            const number = parseInt(text.replace(/\D/g, ''));
            
            // Limpiar el contenido inicial
            entry.target.textContent = '0' + (text.includes('%') ? '%' : (text.includes('+') ? '+' : ''));
            
            // Iniciar animación
            setTimeout(function() {
              animateCounter(entry.target, number, 2000);
            }, 100);
          }
        });
      }, {
        threshold: 0.5
      });

      statCards.forEach(function(card) {
        observer.observe(card);
      });

      // === EFECTO PARALLAX EN FONDO ===
      const seccion = document.querySelector('.seccion-porque-ayala');
      
      window.addEventListener('scroll', function() {
        const scrolled = window.pageYOffset;
        const seccionTop = seccion.offsetTop;
        const seccionHeight = seccion.offsetHeight;
        
        if (scrolled > seccionTop - window.innerHeight && scrolled < seccionTop + seccionHeight) {
          const offset = (scrolled - seccionTop) * 0.15;
          seccion.style.backgroundPosition = `center ${offset}px`;
        }
      });

      // === SMOOTH SCROLL PARA EL BOTÓN ===
      document.querySelector('.btn-trabajemos-ayala').addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        if (href.startsWith('#')) {
          e.preventDefault();
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });

    });
  </script>

  <!-- Sitio web hecho por Arnaldo Ayala – Estratega en IA y Marketing -->
