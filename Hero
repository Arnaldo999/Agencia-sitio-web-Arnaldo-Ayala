  <!-- === SCRIPTS JAVASCRIPT === -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      
      // === EFECTO PARALLAX SUAVE EN SCROLL ===
      let heroSection = document.querySelector('.hero-ayala');
      let heroBackground = document.querySelector('.hero-ayala::before');
      
      window.addEventListener('scroll', function() {
        let scrolled = window.pageYOffset;
        let parallaxSpeed = 0.5;
        
        if (heroSection && scrolled < window.innerHeight) {
          // Aplicar transformación parallax
          heroSection.style.transform = 'translateY(' + (scrolled * parallaxSpeed) + 'px)';
        }
      });

      // === SMOOTH SCROLL PARA ANCLAS ===
      document.querySelectorAll('a[href^="#"], a[href*="/#"]').forEach(function(anchor) {
        anchor.addEventListener('click', function(e) {
          let href = this.getAttribute('href');
          
          // Si el enlace contiene un ancla
          if (href.includes('#')) {
            let targetId = href.split('#')[1];
            let targetElement = document.getElementById(targetId);
            
            if (targetElement) {
              e.preventDefault();
              targetElement.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          }
        });
      });

      // === OPTIMIZACIÓN DE RENDIMIENTO ===
      // Detectar si el usuario está en un dispositivo móvil
      let isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
      
      if (isMobile) {
        // Desactivar animaciones complejas en móviles
        document.querySelector('.hero-ayala').style.transform = 'none';
      }

    });
  </script>

  <!-- Sitio web hecho por Arnaldo Ayala – Estratega en IA y Marketing -->
