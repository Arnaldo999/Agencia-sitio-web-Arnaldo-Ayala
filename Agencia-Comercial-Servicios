  <!-- === SCRIPTS JAVASCRIPT === -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      
      // === EFECTO PARALLAX EN DECORACIONES DE FONDO (SOLO DESKTOP) ===
      if (window.innerWidth > 768) {
        const seccion = document.querySelector('.seccion-agencia-ayala');
        
        window.addEventListener('scroll', function() {
          const scrolled = window.pageYOffset;
          const seccionTop = seccion.offsetTop;
          const seccionHeight = seccion.offsetHeight;
          
          // Solo aplicar efecto cuando la sección está visible
          if (scrolled > seccionTop - window.innerHeight && scrolled < seccionTop + seccionHeight) {
            const offset = (scrolled - seccionTop) * 0.15;
            seccion.style.backgroundPosition = `center ${offset}px`;
          }
        });
      }

      // === EFECTO DE SEGUIMIENTO DEL MOUSE EN TARJETAS (SOLO DESKTOP) ===
      if (window.innerWidth > 768) {
        const tarjetas = document.querySelectorAll('.servicio-card-ayala');
        
        tarjetas.forEach(function(tarjeta) {
          tarjeta.addEventListener('mousemove', function(e) {
            const rect = tarjeta.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            
            const rotateX = (y - centerY) / 20;
            const rotateY = (centerX - x) / 20;
            
            tarjeta.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-12px)`;
          });
          
          tarjeta.addEventListener('mouseleave', function() {
            tarjeta.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) translateY(0)';
          });
        });
      }

      // === ANIMACIÓN DE CONTADOR DE SERVICIOS ===
      const tarjetas = document.querySelectorAll('.servicio-card-ayala');
      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, {
        threshold: 0.2
      });

      tarjetas.forEach(function(tarjeta) {
        observer.observe(tarjeta);
      });

    });
  </script>

  <!-- Sitio web hecho por Arnaldo Ayala – Estratega en IA y Marketing -->
