  <!-- === SCRIPTS JAVASCRIPT === -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      
      // === EFECTO PARALLAX EN HERO ===
      const heroSection = document.querySelector('.hero-diseno-web-ayala');
      
      if (heroSection) {
        window.addEventListener('scroll', function() {
          const scrolled = window.pageYOffset;
          if (scrolled < window.innerHeight) {
            const parallaxSpeed = 0.5;
            heroSection.style.transform = 'translateY(' + (scrolled * parallaxSpeed) + 'px)';
          }
        });
      }

      // === ANIMACIÓN AL HACER SCROLL ===
      const cards = document.querySelectorAll('.plan-card-ayala');
      
      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, {
        threshold: 0.1
      });

      cards.forEach(function(card) {
        observer.observe(card);
      });

      // === ANIMACIÓN DE CONTADORES ===
      const contadores = document.querySelectorAll('.estadistica-numero-ayala');
      
      const observerContadores = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !entry.target.classList.contains('contado')) {
            entry.target.classList.add('contado');
            animarContador(entry.target);
          }
        });
      }, {
        threshold: 0.5
      });

      contadores.forEach(function(contador) {
        observerContadores.observe(contador);
      });

      function animarContador(elemento) {
        const target = parseInt(elemento.getAttribute('data-target'));
        const isPercentage = elemento.textContent.includes('%');
        const hasPlus = elemento.textContent.includes('+');
        const duration = 2000;
        const increment = target / (duration / 16);
        let current = 0;

        const timer = setInterval(function() {
          current += increment;
          if (current >= target) {
            elemento.textContent = target + (isPercentage ? '%' : '+');
            clearInterval(timer);
          } else {
            elemento.textContent = Math.floor(current) + (isPercentage ? '%' : '+');
          }
        }, 16);
      }

      // === CARRUSEL DE TESTIMONIOS ===
      const carrusel = document.querySelector('.testimonios-carrusel-ayala');
      const btnPrev = document.querySelector('.carrusel-btn-prev-ayala');
      const btnNext = document.querySelector('.carrusel-btn-next-ayala');
      const dots = document.querySelectorAll('.carrusel-dot-ayala');
      const cards = document.querySelectorAll('.testimonio-landing-card-ayala');
      
      let currentPage = 0;
      const isMobile = window.innerWidth < 1024;
      const totalPages = isMobile ? cards.length : Math.ceil(cards.length / 2);
      let autoScrollInterval;

      // Función para actualizar la posición del carrusel
      function updateCarousel(index) {
        currentPage = index;

        if (isMobile) {
          // Móvil: scroll horizontal
          const cardWidth = cards[0].offsetWidth;
          const gap = 30;
          carrusel.scrollTo({
            left: (cardWidth + gap) * index,
            behavior: 'smooth'
          });

          // Actualizar dots
          dots.forEach(function(dot, i) {
            if (i === index) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        } else {
          // Desktop: cambiar página (grid)
          carrusel.className = 'testimonios-carrusel-ayala page-' + index;
        }
      }

      // Navegación con flechas (desktop)
      if (btnPrev && btnNext) {
        btnPrev.addEventListener('click', function() {
          currentPage = (currentPage - 1 + totalPages) % totalPages;
          updateCarousel(currentPage);
        });

        btnNext.addEventListener('click', function() {
          currentPage = (currentPage + 1) % totalPages;
          updateCarousel(currentPage);
        });
      }

      // Click en dots (móvil)
      dots.forEach(function(dot) {
        dot.addEventListener('click', function() {
          const index = parseInt(this.getAttribute('data-index'));
          updateCarousel(index);
        });
      });

      // Auto-scroll en móvil
      if (isMobile) {
        autoScrollInterval = setInterval(function() {
          currentPage = (currentPage + 1) % totalPages;
          updateCarousel(currentPage);
        }, 5000); // Cambia cada 5 segundos

        // Pausar auto-scroll al interactuar
        carrusel.addEventListener('touchstart', function() {
          clearInterval(autoScrollInterval);
        });

        // Reanudar auto-scroll después de 10 segundos sin interacción
        carrusel.addEventListener('touchend', function() {
          setTimeout(function() {
            autoScrollInterval = setInterval(function() {
              currentPage = (currentPage + 1) % totalPages;
              updateCarousel(currentPage);
            }, 5000);
          }, 10000);
        });

        // Actualizar dots al hacer scroll manual
        carrusel.addEventListener('scroll', function() {
          const cardWidth = cards[0].offsetWidth;
          const scrollPosition = carrusel.scrollLeft;
          const index = Math.round(scrollPosition / (cardWidth + 30));
          
          dots.forEach(function(dot, i) {
            if (i === index) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        });
      }

    });
  </script>

  <!-- Sitio web hecho por Arnaldo Ayala – Estratega en IA y Marketing -->
</body>
